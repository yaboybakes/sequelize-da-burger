<div class="container text-center">
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="http://www.tastyburger.com/wp-content/themes/tastyBurger/images/home/img-large-burger.jpg" width="200" height="200" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Burger Express!</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 text-center">

            <h2>Fresh Burgers!</h2>
            <ol>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li>
                            <h3>
							{{this.burger_name}}
							<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
								<input type="hidden" name="devoured" value="true">
								<button type="submit" class="btn btn-primary">Devour it!</button>
							</form>
							</h3>
                        </li>
                    {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-md-6 text-center">

            <h2>Burgers from the Past!</h2>

            <ol>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li>
                            <h3>
							{{this.burger_name}}
							<h3>
					        {{> burgers/delete-burger}}
						</li>
					{{/if}}
				{{/each}}
			</ol>
		</div>
  	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<h1>Create Your Own!</h1>
			<form class="create-update-form" action="burgers/create" method="POST">
				<div class="form-group">
					<label for="burger">Burger Name:</label>
					<input type="text" id="burger" name="name">
				</div>
				<button type="submit" class="btn btn-primary">Add Burger</button>
			</form>
		</div>
  	</div>
</div>
